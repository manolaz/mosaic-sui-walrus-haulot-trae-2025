{
	"name": "@mysten/messaging",
	"version": "0.1.0",
	"description": "Messaging SDK (Alpha - Experimental)",
	"license": "Apache-2.0",
	"author": "Mysten Labs <build@mystenlabs.com>",
	"type": "commonjs",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/cjs/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		}
	},
	"sideEffects": false,
	"files": [
		"CHANGELOG.md",
		"README.md",
		"dist"
	],
	"scripts": {
		"clean": "rm -rf tsconfig.tsbuildinfo ./dist",
		"build": "build-package",
		"build:build-scripts": "turbo run build --filter=@mysten/build-scripts",
		"codegen": "sui-ts-codegen generate && pnpm lint:fix",
		"vitest": "vitest",
		"test": "pnpm test:typecheck && pnpm test:unit",
		"test:typecheck": "tsc -p ./test",
		"test:unit": "vitest run unit __tests__ || echo 'No unit tests found'",
		"test:integration": "vitest run test/integration-*.test.ts",
		"test:integration:localnet": "TEST_ENVIRONMENT=localnet vitest run test/integration-write.test.ts",
		"test:integration:testnet": "TEST_ENVIRONMENT=testnet vitest run test/integration-*.test.ts",
		"changeset-version": "pnpm changeset version",
		"alpha:enter": "pnpm changeset pre enter alpha",
		"alpha:exit": "pnpm changeset pre exit",
		"prepublishOnly": "pnpm turbo build",
		"prettier:check": "prettier -c --ignore-unknown .",
		"prettier:fix": "prettier -w --ignore-unknown .",
		"eslint:check": "eslint --max-warnings=0 .",
		"eslint:fix": "pnpm run eslint:check --fix",
		"lint": "pnpm run eslint:check && pnpm run prettier:check",
		"lint:fix": "pnpm run eslint:fix && pnpm run prettier:fix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MystenLabs/sui-stack-messaging-sdk.git"
	},
	"bugs": {
		"url": "https://github.com/MystenLabs/sui-stack-messaging-sdk/issues"
	},
	"homepage": "https://github.com/MystenLabs/sui-stack-messaging-sdk#readme",
	"dependencies": {
		"@mysten/bcs": "^1.9.1",
		"@mysten/seal": "^0.9.1",
		"@mysten/sui": "^1.43.1",
		"@mysten/walrus": "^0.8.1"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.6",
		"@ianvs/prettier-plugin-sort-imports": "^4.7.0",
		"@manypkg/cli": "^0.25.1",
		"@mysten/build-scripts": "workspace:*",
		"@mysten/codegen": "^0.5.7",
		"@protobuf-ts/grpcweb-transport": "^2.11.1",
		"@protobuf-ts/plugin": "^2.11.1",
		"@tanstack/eslint-plugin-query": "^5.91.2",
		"@testcontainers/postgresql": "^11.7.2",
		"@types/node": "^24.9.1",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"concurrently": "^9.2.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^8.10.2",
		"eslint-config-react-app": "^7.0.1",
		"eslint-import-resolver-typescript": "^3.10.1",
		"eslint-plugin-header": "^3.1.1",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.5.3",
		"eslint-plugin-require-extensions": "^0.1.3",
		"eslint-plugin-tsdoc": "^0.2.17",
		"eslint-plugin-unused-imports": "^3.2.0",
		"graphql-config": "^5.1.5",
		"onchange": "^7.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"testcontainers": "^11.7.2",
		"tsx": "^4.20.6",
		"turbo": "^2.5.8",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"engines": {
		"pnpm": ">=10.17.0"
	},
	"manypkg": {
		"ignoredRules": [
			"INTERNAL_MISMATCH",
			"ROOT_HAS_DEV_DEPENDENCIES"
		]
	},
	"packageManager": "pnpm@10.17.0"
}
